<h1>チャット</h1>

<ul>
<% @posts.each do |post| %>
	<li>
	(<%=h post.created_at.localtime.strftime("%y/%m/%d %H:%M:%S") %>)
	[<%=h post.nick %>]
	<%=h post.content %>
	(<%=h distance_of_time_in_words_to_now(post.created_at) %> ago)
	<%= link_to "コメント(%d)" % post.comments.count, post %>
	</li>
<% end %>
</ul>

<%= link_to 'New post', new_post_path %>
