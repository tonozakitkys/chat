<p>
  <b>Nick:</b>
  <%=h @post.nick %>
</p>

<p>
  <b>Content:</b>
  <%=h @post.content %>
</p>

<h2>コメント一覧</h2>
<ul>
<% @post.comments.each do |comment| %>
	<li>
	<%=h comment.content %>
	</li>
<% end %>
</ul>

<% form_tag :action => :comment do %>
	<%= text_field_tag :content, nil, :size => 60 %>
	<%= hidden_field_tag :post_id, @post.id %>
	<%= submit_tag %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
